<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SugrBalance_App.MainPage">


    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="100" CornerRadius="0">
            <Label Text="Welcome to SugrBalance!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Please Log In or Register to continue" FontSize="Title" Padding="20,10" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            <Button Clicked="goToLogin" Grid.Row="1" Text="Log in" />
            <Button Clicked="goToRegPage" Grid.Row="2" Text="Resgistration"  />
        </Grid>
       
    </StackLayout>
</ContentPage>
