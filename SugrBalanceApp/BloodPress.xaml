<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SugrBalance_App.BloodPress">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Blood Pressure"
                FontAttributes="Bold"   
                FontSize="50"   
                HorizontalOptions="CenterAndExpand" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Entry Grid.Row="0" VerticalTextAlignment="Start" Placeholder="Enter Today's Data"></Entry>
                <Button Clicked="goToBPTrend"  Grid.Row="1" Text="Trend" HorizontalOptions="Center"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
