<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SugrBalance_App.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Home Page"
                FontAttributes="Bold"
                FontSize="Large"/>
            <Button Text="Call NHS" WidthRequest="150"
                    HorizontalOptions="EndAndExpand"></Button>
            <Button Text="Call Emergency Contact" WidthRequest="150"
                    HorizontalOptions="EndAndExpand"></Button>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="bp" Text="Blood Pressure"/>
                <Button Text="Blood Sugar" WidthRequest="{Binding Path=Width, Source={x:Reference bp}}"/>
                <Button Text="Medication" WidthRequest="{Binding Path=Width, Source={x:Reference bp}}"/>
                <!--https://stackoverflow.com/questions/47357595/how-to-position-3-buttons-in-stacklayout-equal-width?msclkid=29597e3fbaa511ec9ddb5ccae1f122f0-->
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>